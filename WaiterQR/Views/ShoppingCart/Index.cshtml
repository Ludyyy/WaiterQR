@using WaiterQR.Models;
@{
    ViewBag.Title = "Index";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowBasket</h2>

<table border="1">
    <tr>
        <th>Name </th>
        <th>Price </th>
        <th>Quantity </th>
        <th>Sub Total </th>
    </tr>

    @foreach (var cart in (List<Cart>)Session["Cart"])
    {
        <tr>
            <td>@cart.Product.ProductName</td>
            <td>@cart.Product.ProductPrice</td>
            <td>@cart.Quantity</td>
            <td>@(String.Format("{0:N0}", Int32.Parse(cart.Product.ProductPrice) * cart.Quantity))</td>
            <td>
                @Html.ActionLink("Delete","Delete","ShoppingCart", new { id = cart.Product.ProductID }, new { onclick = "return cornfirm('Are you sure you want to delete this?');"})
            </td>
        </tr>
    }
</table>
<br />
@Html.ActionLink("Continue Shopping?", "Index", "Product")