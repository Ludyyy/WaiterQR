@model List<WaiterQR.Database.RestaurantTable>

@{
    ViewBag.Title = "ShowRestarauntTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowRestarauntTable</h2>

<!DOCTYPE html>

<html>
<head>
    <style>
        table {
            width: 100%;
        }

        td, th {
            text-align: center;
            padding: 15px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Restaurant</th>
            <th>Table</th>
            
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.RestaurantID </td>
                <td> @item.RestaurantSeat </td>
               
                <td>@Html.ActionLink("Show QR Code", "CreateQRCOde", "QrCode", new { restaurantid = item.RestaurantID,restauranttable=item.RestaurantSeat}, null)</td>
            </tr>
        }

    </table>

</body>
</html>