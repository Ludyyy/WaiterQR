@model WaiterQR.Models.MenuViewModel
@{

    ViewBag.Title = "ShowMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:blanchedalmond">Menu</h2>

<style>

    body {
        background-image: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url("../Images/table-on-wooden-plank-326279.jpg");
        background-size: cover;
    }

    .jumbotron {
        background: rgba(232, 232, 232, 0.6);
    }
</style>


<div class="body">

    @foreach (var item in Model.productList)
    {
        <div class="jumbotron col-md-auto">
            <h1 class="col-4"> @Html.DisplayFor(modelItem => item.ProductName) </h1>
            <p class="lead ">
                @{var imgSrc = String.Format("data:image/gif;base64,{0}", item.ImagePath);
                }
                <img src="@imgSrc" width="100" height="100" />
            </p>
            <p>@Html.DisplayFor(modelItem => item.ProductDescription)</p>
            <h1>@Html.DisplayFor(modelItem => item.ProductPrice) €</h1>
            <button class="btn btn-dark">
                @Html.ActionLink("Add To Basket", "AddShoppingCart", "ShoppingCart", new { productid = item.ProductID, tableid = Model.restaurantTable.ID }, null)
            </button>
        </div>
    }
</div>
