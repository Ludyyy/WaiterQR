@model List<WaiterQR.Models.ActiveOrderViewModel>
@{
    ViewBag.Title = "ShowActiveOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowActiveOrder</h2>


<html>
<head>
    <style>
        table {
            width: 100%;
        }

        td, th {
            text-align: center;
            padding: 15px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>TableNo</th>
            <th>Product</th>
            <th>Amount</th>


        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.tableid</td>
                <td> @item.productname </td>
                <td> @item.amount </td>

            </tr>
        }

    </table>

</body>
</html>