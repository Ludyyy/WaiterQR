@model List<WaiterQR.Models.ActiveOrderViewModel>
@{
    ViewBag.Title = "ShowActiveOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowActiveOrder</h2>

<html>
<head>
    <style>
        table {
            width: 100%;
        }

        td, th {
            text-align: center;
            padding: 15px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Table</th>
            <th>Product</th>
            <th>Amount</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Tableid </td>
                <td> @item.Productname </td>
                <td> @item.Amount </td>
                @if (item.Status == 1)
                {
                    <td>Active</td>
                }
                else
                {
                    <td>Finished Order</td>
                }
                <td>
                    <button class="btn btn-dark">@Html.ActionLink("Mark as delivered", "FinishOrder", "ActiveOrder", new { orderid = item.OrderID }, null)</button>
                </td>

            </tr>
        }


    </table>
    <div>
        <button class="btn btn-secondary">
            @Html.ActionLink("Back to the RestaurantList", "ShowRestaurant", "Restaurant")
        </button>

    </div>
</body>
</html>
