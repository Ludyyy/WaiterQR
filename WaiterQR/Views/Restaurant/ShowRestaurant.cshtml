@model  List<WaiterQR.Database.Restaurant>

@{
    ViewBag.Title = "ShowRestaurant";
}

<h2>ShowRestaurant</h2>

<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>

<table>
    <tr>
        <th>Restaurant</th>
        <th>Owner</th>
        <th>Ort</th>
        <th>Haus</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td> @item.RestaurantID </td>
    <td> @item.OwnerID </td>
    <td> @item.RestaurantPostalCode, @item.Restaurant_City</td>
    <td> @item.Restaurant_StreetName, @item.Restaurant_HouseNo</td>
</tr>
    }

</table>

</body>
</html>