@model Byte[]
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>

<body>
    <div class="container">
        <div id="content">
            <div>
                @if (ViewBag.message != null)
                {
                    <h4>@ViewBag.message</h4>
                }
            </div>

            @{
                if (Model != null)
                {
                    <h3>QR Code Successfully Generated</h3>
                    <img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model))" />
                }
            }
        </div>
    </div>

    
</body>
</html>